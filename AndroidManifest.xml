<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yaoli.smsread"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MainTitle" >
        <activity
            android:name="com.yaoli.smsread.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yaoli.smsread.SmsDetailActivity"
            android:label="@string/title_activity_sms_detail" >
        </activity>
        <activity
            android:name="com.yaoli.smsread.SmsNewActivity"
            android:label="@string/title_activity_sms_new" >
        </activity>
        <activity
            android:name="com.yaoli.smsread.SmsViewActivity"
            android:label="@string/title_activity_sms_view" >
        </activity>
        <activity
            android:name="com.yaoli.smsread.MainTabActivity"
            android:label="@string/title_activity_main_tab" >

            <!--
            intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter
            -->
        </activity>
        <activity
            android:name="com.yaoli.smsread.ViewDetailActivity"
            android:label="@string/title_activity_view_detail" >
        </activity>
    </application>

    <!-- uses-permission android:name="android.permission.RECEIVED_SMS"></uses-permission -->
    <uses-permission android:name="android.permission.READ_CONTACTS" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.SEND_SMS" />

</manifest>