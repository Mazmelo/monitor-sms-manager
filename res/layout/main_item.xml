<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<ImageView android:id="@+id/Image" android:layout_margin="5dp"
	    android:layout_width="50dp" android:layout_height="50dp"
	     android:scaleType="centerCrop"/>
	<LinearLayout android:orientation="vertical" android:paddingTop="5dp" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
	    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
		    <TextView android:id="@+id/Contact" android:gravity="left" android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		         android:textSize="18sp" 
		        android:paddingLeft="2dp"/>
		    <TextView android:id="@+id/Count" android:layout_width="wrap_content" android:layout_height="wrap_content" 
		        android:textSize="18sp"/>
		     <TextView android:id="@+id/Date" android:gravity="right" android:layout_width="fill_parent" 
		        android:layout_height="wrap_content" android:paddingRight="8dp"	/>
		</LinearLayout>

	    
	    <TextView android:id="@+id/Content"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="left" android:singleLine="true"
		android:paddingLeft="2dp" android:paddingRight="8dp" android:paddingBottom="2dp" android:autoLink="none"/>
	</LinearLayout> 	
</LinearLayout>